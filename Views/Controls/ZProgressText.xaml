<UserControl x:Class="ZanoFineTuning.Views.Controls.ZProgressText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZanoFineTuning.Views.Controls"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" >
    <Grid>
        <StackPanel x:Name="_StackPanel">
            <Label x:Name="_Text">Text</Label>
        </StackPanel>
        <controls:MetroProgressBar x:Name="_Progress" IsIndeterminate="True" Foreground="{DynamicResource Z-Brush-Gold}" Margin="0,25,0,0"/>
    </Grid>
</UserControl>
