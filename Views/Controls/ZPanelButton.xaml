<UserControl x:Class="ZanoFineTuning.Views.Controls.ZPanelButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZanoFineTuning.Views.Controls"
             mc:Ignorable="d">

    <Button Style="{DynamicResource Z-Button-Compound}" HorizontalAlignment="Stretch" x:Name="Button">
        <StackPanel>
            <Label x:Name="_Header" FontSize="{DynamicResource Z-OneHalf}" FontFamily="{DynamicResource Z-Font-Family}" FontWeight="Normal" Padding="0" Margin="0" HorizontalAlignment="Left">...</Label>
            <TextBlock x:Name="_Description" FontSize="{DynamicResource Z-Small}" Foreground="{DynamicResource Z-Brush-White}" FontWeight="Normal">...</TextBlock>
        </StackPanel>
    </Button>
</UserControl>
